<div class="container">
    
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col" width="80%">Title</th>
                <th scope="col" width="20%">Listen</th>
            </tr>
        </thead>
        <tbody>
            {{#each tracks}}
                <tr>
                    <td valign="middle">
                        {{this.name}}
                    </td>
                    <td valign="middle">
                        {{#if this.preview_url}}
                            <audio controls>
                                <source src="{{this.preview_url}}" type="audio/mp3">
                            </audio>
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

</div>
